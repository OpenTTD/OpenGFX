	[ 658,    8,  64,  23, -31,   0, ANIM, "sprites/png/terrain/waterfeatures.png"]
	[   2,   72,  64,  39, -31,  -8, ANIM, "sprites/png/terrain/waterfeatures.png"]
	[  82,   72,  64,  23, -31,   0, ANIM, "sprites/png/terrain/waterfeatures.png"]
	[ 162,   72,  64,  39, -31,  -8, ANIM, "sprites/png/terrain/waterfeatures.png"]
}

